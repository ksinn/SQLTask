<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/entetyDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <servlet-mapping>
        <servlet-name>Next</servlet-name>
        <url-pattern>/exam/next</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            120
        </session-timeout>
    </session-config>
    <!--
        sec
    -->
    <security-role>
        <role-name>admin</role-name>
    </security-role>
    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>AdminsPage</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <!--
        init
    -->
    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>/WEB-INF/log4j.properties</param-value>
    </context-param>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>SiteName</param-name>
        <param-value>ONLINE EDUCATION SYSTEM</param-value>
    </context-param>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/error.jsp</location>
    </error-page>
    <!--
        base
    -->
    <servlet>
        <servlet-name>enter</servlet-name>
        <servlet-class>TasKer.Web.Enter</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cabinet</servlet-name>
        <servlet-class>TasKer.Web.Main</servlet-class>
    </servlet>
    <!--
        task
    -->
    <servlet>
        <servlet-name>addTask</servlet-name>
        <servlet-class>TasKer.Web.Task.AddTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addList</servlet-name>
        <servlet-class>TasKer.Web.Task.AddList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>taskPage</servlet-name>
        <servlet-class>TasKer.Web.Task.TaskPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>listPage</servlet-name>
        <servlet-class>TasKer.Web.Task.ListPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editTask</servlet-name>
        <servlet-class>TasKer.Web.Task.EditTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editGroup</servlet-name>
        <servlet-class>TasKer.Web.Task.EditList</servlet-class>
    </servlet>
    <!--
        exam
    -->
    <servlet>
        <servlet-name>startExam</servlet-name>
        <servlet-class>TasKer.Web.Exam.StartExam</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>doTask</servlet-name>
        <servlet-class>TasKer.Web.Exam.DoExam</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>finishExam</servlet-name>
        <servlet-class>TasKer.Web.Exam.FinishExam</servlet-class>
    </servlet>
    <!--
        api
    -->
    <servlet>
        <servlet-name>List</servlet-name>
        <servlet-class>TasKer.Web.API.List</servlet-class>
    </servlet>
    <!--
        my
    -->
    <servlet>
        <servlet-name>CheckList</servlet-name>
        <servlet-class>controll.CheckGroup</servlet-class>
    </servlet>
    <!--
        mapping
    -->
    <servlet>
        <servlet-name>Next</servlet-name>
        <servlet-class>TasKer.Web.Exam.Next</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addList</servlet-name>
        <url-pattern>/task/add/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addTask</servlet-name>
        <url-pattern>/task/add/task</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editTask</servlet-name>
        <url-pattern>/task/edit/task</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editGroup</servlet-name>
        <url-pattern>/task/edit/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listPage</servlet-name>
        <url-pattern>/task/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>taskPage</servlet-name>
        <url-pattern>/task/task</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>List</servlet-name>
        <url-pattern>/api/task/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>startExam</servlet-name>
        <url-pattern>/exam/start</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>doTask</servlet-name>
        <url-pattern>/exam/do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>finishExam</servlet-name>
        <url-pattern>/exam/finish</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cabinet</servlet-name>
        <url-pattern>/cabinet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>enter</servlet-name>
        <url-pattern>/enter</url-pattern>
    </servlet-mapping>
</web-app>
